<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MechShakerUI.Views.Controls.ToggleControl"
             x:Name="ThisControl">
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="8"
                Margin="0, 17" Width="612">
        <TextBlock Text="{Binding Label, ElementName=ThisControl}" Width="142" FontWeight="SemiBold" />
        <CheckBox IsChecked="{Binding Enabled, ElementName=ThisControl, Mode=TwoWay}" Margin="454,0,0,0" />
    </StackPanel>
</UserControl>